<div class="container">

    <div class="d-flex flex-rox justify-content-between">
        <div>
            <h1>Name :       {{tienda.name}}</h1>
            <p>Categories:   {{tienda.categories}}</p>
            <p>Id tienda:    {{tienda.id}}</p>
            <a href="        {{tienda.officialWeb}}">Official WebPage </a>
            <p>Description : {{tienda.description}}</p>
            <img class="logoCircle" src="{{tienda.logo}}" alt="logo tienda">
        </div>
        <div>
            <img src="{{tienda.image1}}" alt="img1 tienda">
        </div>
        <div>
            <img src="{{tienda.image2}}" alt="img 2 tienda">
        </div>
    </div>

    
    {{#ifIsDueño dueñoId=currentUser.id tiendaOwnerId=tienda.ownerId}}
        <a href="/tienda/{{tienda.id}}/edit"   class="btn btn-success mt-1"> edit tienda</a>
        <a href="/tienda/{{tienda.id}}/delete" class="btn btn-success mt-1"> delete tienda</a>
    {{/ifIsDueño}}


    <br>
    <br>
    <div>
        <h1>PRODUCTOS</h1>

        {{#ifIsDueño dueñoId=currentUser.id tiendaOwnerId=tienda.ownerId}}
            <a href="/producto/{{tienda.id}}/create" class="btn btn-success mt-1">create producto </a>
        {{/ifIsDueño}}

        
        <div class="d-flex flex-row">

            {{#each pro as |product|}}
            <div class="d-flex flex-column">
                <p>{{this.name}}</p> 
                <a href='/producto/{{this.id}}'>
                    <img class="logoCircle" src="{{this.image2}}" alt="">
                </a>
                <div>
                    {{#ifIsDueño dueñoId=../currentUser.id tiendaOwnerId=../tienda.ownerId}}
                        <a href="/producto/{{product.id}}/edit" class="btn btn-success mt-1"> edit </a>
                    {{/ifIsDueño}}
                </div>
            </div>

            {{/each}}
        </div>
        

    </div>
    
</div>


