<!-- Swiper Tiendas -->
<div id='section-tiendas' class="pt-5 pb-5">
  <h3 class="container pb-3 small">Shops</h3>
    <div class="swiper mySwiper container ">
      <div class="swiper-wrapper">
      {{#each tiendas as |tienda|}}      
        <div class="swiper-slide tienda-slide" style="background: url({{tienda.image}});">
          <a class="tiendalink-home" href="/tienda/{{tienda.id}}"></a>
        </div>
      {{/each}}
      </div>
    </div>
</div>

<script>
  var swiper = new Swiper(".mySwiper", {
    slidesPerView: 3.5,
    spaceBetween: 15,
    pagination: {
      clickable: true,
    },
  });
</script>