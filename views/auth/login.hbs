<div class="mt-4 row justify-content-center">
  <div class="col-4">
    <h2 class="text-center">LOGIN</h2>

    <form class="mt-4" method="POST" action="/login">

      <div class="form-group mb-3">
        <input
          id="email"
          value="{{user.email}}"
          name="email"
          type="email"
          class="form-control {{#if errorMessage}}is-invalid{{/if}}"
          placeholder="Enter name"
        >
      </div>

      <div class="input-group mb-3">
        <input
          id="password"
          name="password"
          type="password"
          class="form-control {{#if errorMessage}}is-invalid{{/if}}"
          placeholder="Password"
        >

        <button class="btn btn-outline-secondary password-toggle c-dark" type="button">
          <i class="fa fa-eye-slash fa-fw"></i>
        </button>
      </div>

      {{#if errorMessage}}
        <div class="text-danger text-small mb-2">
          {{errorMessage}}
        </div>
      {{/if}}

      <button type="submit" class="btn btn-primary">Submit</button>

      <div>
        <a 
        href="/login/google" class="btn  btn-social btn-outline-primary">
        <i class="fa fa-google"></i>Sign in with Google
        </a>
      </div>
    </form>
  </div>
</div>