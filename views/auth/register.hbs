<div id="register" class="d-flex justify-content-center align-items-center">
  <div class="form-block">
    <h3 class="mb-4">Register</h3>

    <form method="POST" action="/register">

      {{! ------ NAME ------ }}
      <div class="form-group mb-3">
        <input
          id="name"
          value="{{user.name}}"
          name="name"
          type="text"
          class="form-control {{#if errors.name}}is-invalid{{/if}}"
          placeholder="Name"
          required
        >
        {{#if errors.name}}
          <div class="invalid-feedback">{{errors.name}}</div>
        {{/if}}
      </div>

      {{! ------ MAIL ------ }}
      <div class="form-group mb-3">
        <input
          id="email"
          value="{{user.email}}"
          name="email"
          type="email"
          class="form-control {{#if errors.email}}is-invalid{{/if}}"
          placeholder="example@expample.com"
          required
        >
        {{#if errors.email}}
          <div class="invalid-feedback">{{errors.email}}</div>
        {{/if}}
      </div>

      {{! ------ PASSWORD ------ }}
      <div class="input-group mb-3">
        <input
          id="password"
          name="password"
          type="password"
          class="form-control {{#if errors.password}}is-invalid{{/if}}"
          placeholder="Password"
          required
        >
        <button class="btn btn-outline-secondary password-toggle c-dark" type="button">
          <i class="fa fa-eye-slash fa-fw"></i>
        </button>

        {{#if errors.password}}
          <div class="invalid-feedback">{{errors.password}}</div>
        {{/if}}
      </div>

      {{!-- Due単o --}}
      <div class="form-group mb-3">
        <input
          id="due単o"
          name="due単o"
          type="checkbox"
          class=""
        >
        <label class="open-tienda" for="due単o">Vas a abrir una tienda?</label>
      </div>

      {{!-- Submit --}}
      <button type="submit" class="btn-brand-1">Submit</button>

    </form>
  </div>
</div>


