<div id="register" class="d-flex justify-content-center">
  <div class="d-flex justify-content-end login-form-block login-form-block_register">
    <div class="form-block ">
      <h3 class="mb-4">Register</h3>
      <form method="POST" action="/register">

        {{!-- Name --}}
        <div class="form-group">
          <div class="input-contain mt-3 mb-4 mt-0">
            <input 
              type="text" 
              id="fname"
              name="name"
              value="{{user.name}}"
              aria-labelledby="placeholder-fname"
              class="form-control {{#if errors.name}} is-invalid {{/if}} input-material"
              required
            >
            <label class="placeholder-text" for="name" id="placeholder-fname">
                <div class="text">Nombre</div>
            </label>
            {{#if errors.name }}
              <span class="invalid-input">*{{errors.name}}</span>
            {{else}}
              <span>*Required</span>
            {{/if}}
          </div>
        </div>

        {{!-- Email --}}
        <div class="form-group mt-5">
          <div class="input-contain mt-3 mb-4">
            <input 
              id="email" 
              value="{{user.email}}"
              name="email" 
              type="email" 
              autocomplete="off" 
              aria-labelledby="placeholder-fname"
              class="form-control {{#if errors.email}}is-invalid{{/if}} input-material"
            >
            <label class="placeholder-text" for="email" id="placeholder-fname">
              <div class="text">Email</div>
            </label>
            {{#if errors.email }}
              <span class="invalid-input">*{{errors.email}}</span>
            {{else}}
              <span>*Required</span>
            {{/if}}
          </div>
        </div>

        {{!-- Password --}}
        <div class="form-group mt-5">
          <div class="input-contain mt-3 mb-4">
            <input 
              id="password"
              value=""
              name="password"
              type="password"
              autocomplete="off" 
              aria-labelledby="placeholder-fname"
              class="form-control {{#if errors.password}}is-invalid{{/if}} input-material"
            >
            <label class="placeholder-text" for="password" id="placeholder-fname">
              <div class="text">Password</div>
            </label>
            {{#if errors.password }}
              <span class="invalid-input">*{{errors.password}}</span>
            {{else}}
              <span>*Required</span>
            {{/if}}
          </div>
        </div>

        {{!-- Submit --}}
        <button type="submit" class="btn-brand-1 mt-3 register-img">Submit</button>

      </form>
    </div>
  </div>

  <img src="https://res.cloudinary.com/dly7e46yt/image/upload/v1646947083/ironhack/multer-example/hombreShopping_phvvz2.jpg" alt="">
</div>


