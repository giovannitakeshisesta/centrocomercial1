<h1>register</h1>
<div class="row justify-content-center mt-4">
  <div class="col-sm-4">
    <h1 class="mb-4">Register</h1>

    <form method="POST" action="/register">

      {{! ------ NAME ------ }}
      <div class="form-group mb-3">

        <div class="input-contain mt-3 mb-4">
          <input 
            type="text" 
            id="fname" 
            name="name" 
            autocomplete="off" 
            value="{{user.name}}"
            aria-labelledby="placeholder-fname"
            class="form-control {{#if errors.name}} is-invalid {{/if}} input-material"
            required
          >
          <label class="placeholder-text" for="name" id="placeholder-fname">
              <div class="text">Nombre</div>
          </label>
          <span>*Required</span>
        </div>

        {{!-- <label for="name">Name</label>
        <input
          id="name"
          value="{{user.name}}"
          name="name"
          type="text"
          class="form-control {{#if errors.name}}is-invalid{{/if}}"
          placeholder="Name"
          required
        > --}}
        {{#if errors.name}}
          <div class="invalid-feedback">{{errors.name}}</div>
        {{/if}}
      </div>

      {{! ------ MAIL ------ }}
      <div class="form-group mb-3">
        <label for="email">Email</label>
        <input
          id="email"
          value="{{user.email}}"
          name="email"
          type="email"
          class="form-control {{#if errors.email}}is-invalid{{/if}}"
          placeholder="example@expample.com"
          required
        >
        {{#if errors.email}}
          <div class="invalid-feedback">{{errors.email}}</div>
        {{/if}}
      </div>

      {{! ------ PASSWORD ------ }}
      <div class="form-group mb-3">
        <label for="password">Password</label>
        <input
          id="password"
          name="password"
          type="password"
          class="form-control {{#if errors.password}}is-invalid{{/if}}"
          placeholder="Password"
          required
        >
        {{#if errors.password}}
          <div class="invalid-feedback">{{errors.password}}</div>
        {{/if}}
      </div>

      {{! ------ DUEÑO ------ }}
      <div class="form-group mb-3">
        <label for="dueño">Vas a abrir una tienda?</label>
        <input
          id="dueño"
          name="dueño"
          type="checkbox"
          class=""
        >
      </div>


      <button type="submit" class="btn btn-primary">Submit</button>

    </form>

  </div>
</div>


