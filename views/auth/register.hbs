<div class="row justify-content-center mt-4">
  <div class="col-sm-4">
    <h1>Register</h1>

    <form method="POST" action="/register">

      {{! ------ NAME ------ }}
      <div class="form-group mb-3">
        <input
          id="name"
          value="{{user.name}}"
          name="name"
          type="text"
          class="form-control {{#if errors.name}}is-invalid{{/if}}"
          placeholder="Name"
          required
        >
        {{#if errors.name}}
          <div class="invalid-feedback">{{errors.name}}</div>
        {{/if}}
      </div>

      {{! ------ MAIL ------ }}
      <div class="form-group mb-3">
        <input
          id="email"
          value="{{user.email}}"
          name="email"
          type="email"
          class="form-control {{#if errors.email}}is-invalid{{/if}}"
          placeholder="example@expample.com"
          required
        >
        {{#if errors.email}}
          <div class="invalid-feedback">{{errors.email}}</div>
        {{/if}}
      </div>

      {{! ------ PASSWORD ------ }}
      <div class="input-group mb-3">
        <input
          id="password"
          name="password"
          type="password"
          class="form-control {{#if errors.password}}is-invalid{{/if}}"
          placeholder="Password"
          required
        >
        <button class="btn btn-outline-secondary password-toggle c-dark" type="button">
          <i class="fa fa-eye-slash fa-fw"></i>
        </button>

        {{#if errors.password}}
          <div class="invalid-feedback">{{errors.password}}</div>
        {{/if}}
      </div>

      {{! ------ DUEÑO ------ }}
      <div class="form-group mb-3">
        <label for="dueño">Vas a abrir una tienda?</label>
        <input
          id="dueño"
          name="dueño"
          type="checkbox"
          class=""
        >
      </div>


      <button type="submit" class="btn btn-primary">Submit</button>

    </form>

  </div>
</div>